	def test_should_return_200_with_http_only_url(self):
		get = self.get()
		self.assertEqual(get, jsonify({"_id": 2}))

	def test_should_return_404_with_http_only_url_with_invalid_query(self):
		get = self.get()
		self.assertEqual(get, http.NotFound())

	def test_should_return_200_with_http_only_url_with_invalid_query(self):
		get = self.get()
		self.assertEqual(get, jsonify({}))
